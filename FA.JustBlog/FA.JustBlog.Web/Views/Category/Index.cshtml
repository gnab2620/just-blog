@model IEnumerable<FA.JustBlog.Web.Models.CategoryVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"> Create New</i></a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlSlug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="@(item.IsEnable? Html.Raw("background-color:gray") : Html.Raw("background-color:white"))">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlSlug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (item.IsEnable)
                {
                    <p>True</p>
                }
                else
                {
                    <p>False</p>}
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> </a>
                <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i> </a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you want to delete this record')"><i class="fa fa-trash" aria-hidden="true"></i> </a>
            </td>
        </tr>
}
    </tbody>
</table>
